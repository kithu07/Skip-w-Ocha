{
  "manifest_version": 3,
  "name": "Scream to Skip",
  "version": "1.0",
  "description": "Skip YouTube ads by screaming!",
  "permissions": ["storage", "scripting", "debugger", "offscreen"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}