{
  "manifest_version": 3,
  "name": "Cinema Usher",
  "version": "1.0",
  "description": "Shame your friends for talking during movies! A dramatic usher that scolds loud talkers.",
  "permissions": ["storage", "scripting", "offscreen", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "audio/profiles/*/*.mp3",
        "audio/default/*.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}